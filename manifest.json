{
  "manifest_version": 3,
  "name": "NavSphere Extension",
  "version": "1.0.0",
  "description": "Quick bookmark management and synchronization for NavSphere navigation platform",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "NavSphere Extension"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"],
      "run_at": "document_end"
    }
  ],
  "options_page": "src/options/index.html",
  "permissions": [
    "alarms",
    "contextMenus",
    "storage",
    "tabs",
    "activeTab",
    "bookmarks",
    "identity",
    "notifications"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*",
    "https://*.vercel.app/*",
    "https://*.netlify.app/*",
    "https://*.pages.dev/*"
  ],
  "commands": {
    "quick-add": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Quick add current page to NavSphere"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}